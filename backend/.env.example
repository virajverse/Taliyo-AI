# Backend environment variables
# Rename this file to .env and fill in values

# Gemini configuration
GEMINI_API_KEY=
# Primary model
GEMINI_MODEL=gemini-1.5-pro-latest

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# MongoDB
# Local example
MONGODB_URI=mongodb://127.0.0.1:27017
MONGODB_DB=taliyo_ai
# Atlas example (comment out the local URI and use this instead)
# MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority&appName=<app>

# Simple Auth
# When set, backend requires a passcode login and issues JWTs
AUTH_PASSCODE=
JWT_SECRET=change-me
# Default 7 days (in minutes). Adjust as needed
JWT_EXPIRES_MIN=10080
